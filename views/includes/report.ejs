<div class="report-modal-container" v-show="ReportModal.active" @click.self="ReportModal.active=false">

    <div class="report-modal-wrapper">
        <div class="report-modal-header">
            <h4 class="report-modal-header-text">Report</h4>
            <button class="report-modal-close-btn" @click="ReportModal.active=false"><svg
                    class="report-modal-close-icon" xmlns="http://www.w3.org/2000/svg" height="18px" viewBox="0 0 24 24"
                    width="18px" fill="#000000">
                    <path d="M0 0h24v24H0V0z" fill="none" />
                    <path
                        d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" />
                </svg></button>
        </div>
        <div class="report-modal-inputs-container">
            <select class="report-modal-select-input" v-model="ReportModal.reason">
                <option class="" value="404" selected disabled>Select a Reason</option>
                <option value="101" disabled>-----------------</option>
                <option value="0">Scammer (Mention proof of scamming)</option>
                <option value="1">Scam link/ Referral/ Phishing</option>
                <option value="2">Being intolerant of people(Sexism/Homophobia etc.) </option>
                <option value="3">Promoting a Steam group, Youtube Channel, etc.</option>
                <option value="4">Not typing in english</option>
                <option value="5">Spamming</option>
                <option value="6">Harassing/making fun of a another user/me</option>
                <option value="7">Trade is listed more than once by the same user</option>
                <option value="8">Other (Please write below)</option>
            </select>
            <textarea type="text" class="report-modal-extra-input"
                placeholder="Enter additional information here (optional)" v-model="ReportModal.description"></textarea>
        </div>
        <div class="report-modal-actions-container">
            <div class="submit-container report-submit-container">
                <button class="cancel-report-modal-btn" @click="ReportModal.active=false"
                    v-if="!ReportModal.isReporting">Cancel</button>
                <button class="report-modal-btn success-btn" @click="CreateReport()"
                    v-if="!ReportModal.isReporting">Report</button>
                <div class="loader center-loader" style="font-size: 0.2em;" v-else></div>
            </div>
        </div>
    </div>

</div>