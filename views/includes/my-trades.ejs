<div class="trade-posts">

    <%- include('no-post-created-info.ejs', {posts:posts,profileData:profileData}) %>

        <% posts.forEach(function(post) { %>

            <div id="trade-post-<%=post.postId%>" class="trade-post <%=post.active?'':'trade-post-closed'%>">

                <div class="post-header">
                    <div class="post-user-data">
                        <a href="/user/<%=post.owner.userId%>" target="_blank" class="post-user-data">
                            <img class="post-user-profile-pic" style=<%='border-color:' +post.owner.roleColor%>
                            loading="lazy" src="<%= post.owner.profilePic %>" alt="<%= post.owner.name %>">
                                    <h2 class="post-user-name" style=<%='color:' +post.owner.roleColor%>>
                                        <%= post.owner.name %>
                                    </h2>
                        </a>
                        <a href="/trade/<%=post.postId%>" class="icon-wrapper"><svg class="icon new-link-icon"
                                xmlns="http://www.w3.org/2000/svg" height="18px" viewBox="0 0 24 24" width="18px"
                                fill="#FFFFFF">
                                <path d="M0 0h24v24H0V0z" fill="none" />
                                <path
                                    d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" />
                            </svg></a>

                        <%- include('post-time.ejs', {post:post}) %>

                    </div>
                    <%- include('post-actions.ejs', {post:post,user:user}) %>
                </div>

                <%- include('post-items.ejs', {post:post,isEditable:false}) %>

                    <%- include('post-notes.ejs', {post:post}) %>

                        <%- include('confirm-close-post-dialog.ejs',{post:post}) %>

            </div>

            <% }); %>

</div>

<%- include('item-tooltip.ejs') %>